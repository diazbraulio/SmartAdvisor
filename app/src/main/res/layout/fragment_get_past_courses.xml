<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.smartadvisor.GetPastCourses"
    android:id="@+id/fragment_get_past_courses"
    android:background="@color/white"
    android:stretchColumns="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_past_courses"
        android:gravity="center"
        android:textSize="24sp"
        android:padding="8dip"/>
    <View
        android:layout_height="1dip"
        android:background="@color/red" />
    <TableRow>
        <CheckBox android:id="@+id/comp108check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/comp108"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"/>

        <CheckBox android:id="@+id/comp110check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/comp110"
            android:onClick="onCheckboxClicked"
            android:textSize="20sp"
            android:padding="8dip"
            android:layout_gravity="start"/>
    </TableRow>
    <TableRow>
        <CheckBox android:id="@+id/comp122check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comp122"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/comp182check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comp182"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"
            android:layout_gravity="start"/>
    </TableRow>
    <TableRow>
        <CheckBox android:id="@+id/comp222check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comp222"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/comp256_Lcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comp256"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"
            android:layout_gravity="start"/>
    </TableRow>
    <TableRow>
        <CheckBox android:id="@+id/comp282check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comp282"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/math102check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/math102"
            android:textSize="20sp"
            android:padding="8dip"
            android:layout_gravity="start"
            android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow>
        <CheckBox android:id="@+id/math104check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/math104"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/math150Acheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/math150A"
            android:textSize="20sp"
            android:padding="8dip"
            android:layout_gravity="start"
            android:onClick="onCheckboxClicked"/>

    </TableRow>
    <TableRow>
        <CheckBox android:id="@+id/math150Bcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/math150B"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/math262check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/math262"
            android:textSize="20sp"
            android:padding="8dip"
            android:layout_gravity="start"
            android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow>
        <CheckBox android:id="@+id/phil230check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phil230"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"/>
    </TableRow>
    <TableRow android:gravity="center">
        <CheckBox android:id="@+id/noclasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_classes"
            android:textStyle="bold|italic"
            android:textSize="20sp"
            android:padding="8dip"
            android:onClick="onCheckboxClicked"/>
    </TableRow>
    <View
        android:layout_height="4dip"/>
    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done_button"/>

</TableLayout>